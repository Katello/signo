<!DOCTYPE html>
<html>
<head>
  <title>Signo</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="loginpage">


<div id="wrapper">
  <article id="maincontent">

    <%= render 'layouts/notifications' if flash[:error].present? %>

    <div class="container">
      <aside>
        <div class="logo">
          <%= image_tag 'signo.png' %>
        </div>
      </aside>

      <section>
        <%= yield %>
      </section>
    </div>
  </article>
</div>

</body>
</html>
